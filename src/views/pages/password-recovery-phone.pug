extends ../layout
include ../mixins/mixins

block header
    include ../components/header
block content
    .main-wrapper.main-wrapper--bg
        .container.container--sm
            form
                .auth-box
                    h1.common-title-h1 Восстоновление пароля по телефону
                    .auth-box__text-sm Введите номер. На него мы вышлем смс с кодом
                    +form-group-no-lb(false, 'form-group--custom-text', 'tel', 'custom-input-text lowercase', 'login-phone', 'login-phone', '', true, '', 'Номер телефона*')
                    button(type="submit").auth-box__btn.common-btn
                        span Отправить
                        +pictureSVGAdaptive('/svg/common-btn', '237', '78')
block footer
    include ../components/footer
