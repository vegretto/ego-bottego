extends ../layout
include ../mixins/mixins

block header
    include ../components/header
block content
    .main-wrapper.main-wrapper--bg
        .container.container--sm
            form
                .auth-box
                    h1.common-title-h1 Новый пароль
                    +form-group-no-lb(false, 'form-group--custom-text', 'password', 'custom-input-text lowercase', 'login-pass', 'login-pass', '', true, '', 'Введите новый пароль')
                    +form-group-no-lb(false, 'form-group--custom-text', 'password', 'custom-input-text lowercase', 'login-repeat-pass', 'login-repeat-pass', '', true, '', 'Повтoрите пароль')
                    button(type="submit").auth-box__btn.common-btn
                        span Готово
                        +pictureSVGAdaptive('/svg/common-btn', '237', '78')
block footer
    include ../components/footer
