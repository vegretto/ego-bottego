extends ../layout
include ../mixins/mixins

block header
    include ../components/header
block content
    .main-wrapper.main-wrapper--bg
        .container.container--sm
            form
                .auth-box
                    h1.common-title-h1 Войти
                    +form-group-no-lb(false, 'form-group--custom-text', 'email', 'custom-input-text lowercase', 'login-mail', 'login-mail', '', true, '', 'E-mail*')
                    +form-group-no-lb(false, 'form-group--custom-text', 'password', 'custom-input-text lowercase', 'login-pass', 'login-pass', '', true, '', 'Пароль*')
                    .h-box
                        a(href="#").subform Восстановить пароль
                        a(href="#").subform Регистрация
                    button(type="submit").auth-box__btn.common-btn
                        span Войти
                        +pictureSVGAdaptive('/svg/common-btn', '237', '78')
block footer
    include ../components/footer
